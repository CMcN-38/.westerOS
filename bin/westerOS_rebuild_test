#!/usr/bin/env bash
set -e
pushd /home/cameron/.westerOS/
nvim
#alejandra . &>/dev/null
git diff -U0 *.nix
HOSTNAME=$(hostname)
echo "NixOS Rebuilding (test) for host: $HOSTNAME..."
sudo nixos-rebuild test --flake /home/cameron/.westerOS/#$HOSTNAME &> nixos-switch.log || (
	sudo cat nixos-switch.log | grep --color error && false)
gen=$(nixos-rebuild list-generations | grep current)
git commit -am "$(date)"
popd
notify-send -e "NixOS Rebuilt OK!" --icon=software-update-available

